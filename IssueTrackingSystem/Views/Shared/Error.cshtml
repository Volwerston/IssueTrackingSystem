
@{
    ViewBag.Title = "GeneralErrorPage";
    Layout = "_Main.cshtml";
}


<div class="text-center">
    <div class="row text-center text-danger">
        <h2>Error</h2>
        <br/>
        @if (Server.GetLastError() != null)
        {
        <p>@Server.GetLastError().Message</p>
        }
        
    </div>
    <div class="row">
        <input type="submit" class="btn btn-default" value="Go back" onclick="location.href='@Url.Action("Main", "Bts")'" />
    </div>
</div>