
@{
    ViewBag.Title = "PasswordUpdate";
    Layout = "~/Views/Shared/_Start.cshtml";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <div class="well">
 <form>
    <div class="form-group row">
            <div class="col-md-4">
                @Html.Label("Enter your e-mail:", new { @class="control-label" })
            </div>
            <div class="col-md-8">
                @Html.Editor("email", new { htmlAttributes = new { @class="form-control" } })
                <br />
         </div>
    </div>
     <div class="row">
         <div class="form-group">
             <input type="submit" value="Next" class="btn btn-info col-md-offset-5" />
             <input type="button" class="btn btn-info" value="Go back" onclick="location.href='@Url.Action("Index", "Bts")'" />
         </div>
     </div>
  </form>
    @if(TempData["message"] != null)
    {
        <p class="text-center">@TempData["message"].ToString()</p>
    }

    </div>
    </div>
    </div>
}

