@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Start.cshtml";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-offset-3 col-md-6 well">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.Label("New password", new { @class = "control-label" })
                    </div>
                    <div class="col-md-9">
                        @Html.Editor("password", new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.Label("Confirm password", new { @class = "control-label" })
                    </div>
                    <div class="col-md-9">
                        @Html.Editor("confirmPassword", new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    </div>
                </div>
                <div class="row text-center">
                    @if (TempData["message"] != null)
                {
                        <p class="text-danger">
                            @TempData["message"]
                        </p>
                    }
                </div>
                <div class="row" style="margin-top: 5px;">
                    <div class="col-md-offset-5">
                        <input type="submit" class="btn btn-info" value="Change" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

