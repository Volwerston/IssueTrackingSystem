@model BTS.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Start.cshtml";
}

@using (Html.BeginForm("LogIn", "Bts"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
        <div class="form-horizontal well text-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                <div class="col-md-offset-1 col-md-2">
                    @Html.LabelFor(model => model.Nickname, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-offset-1 col-md-2">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <input type="submit" value="Log in" class="btn btn-success" />
                <input type="button" class="btn btn-info" value="Sign up" onclick="location.href='@Url.Action("SignUp", "Bts")'" />
                <input type="button" class="btn btn-warning" value="Forgot password" onclick="location.href='@Url.Action("PasswordUpdate", "Bts")'" />
                <input type="button" class="btn btn-primary" value="Show avatars" onclick="location.href='@Url.Action("Show", "Bts")'" />
            </div>
          </div>
        </div>
    </div>
}
